{
  "comments": {
    "blockComment": ["(*", "*)"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["Proof.", "Qed."],
    ["Proof.", "Admitted."],
    ["Proof.", "Abort."],
    ["match", "end"],
    ["repeat match", "end"],
    ["repeat lazymatch", "end"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "(*", "close": "*" }
  ]
}
